{
  "name": "siaff-backend",
  "version": "1.0.0",
  "description": "SIAFF - Sistema de Flujo de Efectivo Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node src/seeds/index.js",
    "seed:dev": "NODE_ENV=development node src/seeds/index.js",
    "seed:new": "node src/seeds/index-new.js",
    "seed:new:dev": "NODE_ENV=development node src/seeds/index-new.js",
    "migrate:multitenant": "node migrate-to-multitenant.js",
    "lint": "eslint . --ext js",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "clean": "rimraf logs/*.log",
    "docker:build": "docker build -t siaff-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env siaff-backend"
  },
  "keywords": [
    "siaff",
    "financial",
    "cash-flow",
    "api"
  ],
  "author": "SIAFF Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
