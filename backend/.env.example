# ===========================================
# SIAFF - Backend Environment Variables
# ===========================================
# IMPORTANTE: Copiar a .env y configurar valores reales

# Environment
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/siaff-db
MONGODB_OPTIONS=retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=siaff-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=http://localhost:5173,http://localhost:3000,https://cd7f3c8f3729.ngrok-free.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# Session Configuration
SESSION_SECRET=siaff-session-secret-change-in-production
SESSION_TIMEOUT=3600000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@siaff.net

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_DOCS=true

# External Services (opcional)
SENTRY_DSN=
ANALYTICS_ID=

# Ngrok Configuration (para demos)
NGROK_ENABLED=false
NGROK_AUTH_TOKEN=