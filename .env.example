# ===========================================
# SIAFF - Frontend Environment Variables
# ===========================================
# Copiar este archivo a .env.local y configurar los valores

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# Environment
VITE_ENVIRONMENT=development

# App Configuration
VITE_APP_NAME=SIAFF
VITE_APP_VERSION=2.0.0

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# External Services (opcional)
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Ngrok Configuration (para demos)
VITE_NGROK_ENABLED=false
VITE_NGROK_BACKEND_URL=
